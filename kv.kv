<text_widget>:
    name_input: name

    Label:
        id: hello
        font_size: 30
        text: 'Enter time to find out angel between arrows ##:##'
        pos_hint: {"center_x":0.5, "center_y":.9}
    TextInput:
        id: name
        multiline: False
        size_hint: (.11, None)
        height: 50
        font_size: 30
        text: '01:30'
        pos_hint: {"center_x":0.5, "center_y":.8}
    Button:
        font_size: 30
        text: 'Calculate'
        size_hint: (.5, None)
        pos_hint: {"center_x":0.5, "center_y":.5}
        on_press: root.get_h_m()

<P>:
    Label:
        text: "Please input time in correct format ##:##. Hours is between 0->24, minutes 0->60"
        size_hint: 0.9, 0.2
        pos_hint: {"x":0.1, "top":1}